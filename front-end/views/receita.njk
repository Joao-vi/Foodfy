{% extends "layout.njk" %} 
{% block head %}
<link rel="stylesheet" href="/receita.css">
{% endblock %}
{% block content %}
    <div class="receita-banner">
        <img src="{{receita.image}}" alt="imagem de {{receita.image}}">
    <div class="title-info">
        <h1>{{receita.title}}</h1>
        <p>{{receita.author}}</p>
    </div>
    </div>
    <div  class="ingredientes">
        <div class="title">
            <h3>Ingredientes</h3>
            <p class="hide_1">Esconder</p>
        </div>
         <ul id="tohide_1">
            {% for ingredient in receita.ingredients %}
            <li>{{ingredient}}</li>
            {% endfor %}
        </ul>
    </div>
    <div  class="modo-de-preparo">
        <div class="title">
            <h3>Modo de preparo</h3>
            <p class="hide_2">Esconder</p>
        </div>
        <ul id="tohide_2">
            {% for preparation in receita.preparation %}
            <li>{{preparation}}</li>
            {% endfor %}
        </ul>

    </div>
    <div  class="informacoes">
         <div class="title">
            <h3>Informações adicionais</h3>
            <p class="hide_3">Esconder</p>
        </div>
        <p id="tohide_3">{{receita.information}}</p>
    </div>
{% endblock %}