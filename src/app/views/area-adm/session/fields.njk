
<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
            {% if error %}
                class="error"
            {% endif %}
            required
            type="Email" 
            name="email" 
            placeholder="Digite seu email"
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')"
            >
    </div>
</div>
<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
            {% if error %} 
                class="error" 
            {% endif %}
            required
            type="password" 
            name="password" 
            placeholder="Digite sua senha"
            >
    </div>
</div>

