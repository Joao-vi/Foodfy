{% extends "../../layout.njk" %}
{% import "../../parts/header.njk" as header %}

{% block header%}
{{ header.header( "logo.png", "" , false) }}

{% endblock %}
{% block content %}

<section class="password container form">
    <form method="POST" action="/admin//users/forgot-password" >
        <div class="header">
            <h3>Esqueceu a senha?</h3>
        </div>
        <div class="fields">
             <div class="item">
                <div>Email</div>
                <div class="input">
                    <input 
                        required
                        type="Email" 
                        name="email" 
                        placeholder="Digite seu email"
                        value="{{user.email}}"
                        onblur="Validate.apply(this, 'isEmail')"
                        >
                </div>
            </div>
        </div>
        <button class="button" type="submit">Recuperar</button>
           
    </form>
</section>
{% endblock content %}
