
<div  class="item">
    <div>
        <h3>Nome</h3>
    </div>
    <div class="input-layout">
        <input 
            required 
            type="text" 
            name="name" 
            value="{{chef.name}}">
    </div>
</div>

<div  class="item">
    <div>
        <h3>Avatar</h3>
    </div>
    <div class="input-layout">
        <input 
            required 
            type="url" 
            name="avatar_url" 
            placeholder="http://" 
            value="{{chef.avatar_url}}">
    </div>
</div>