{% extends "../../layout.njk" %} 
{% block head %}
    <link rel="stylesheet" href="/index.css">
    <link rel="stylesheet" href="/section.css">
{% endblock%}
{% block header%}
        <a href="/admin/recipes">Receitas</a>
        <a href="/admin/chefs">Chefs</a>
{% endblock %}
{% block content %}
        <div id="title-acessed">
            <h1>Gerenciar Chefs</h1>
        </div>
        <section class="more-acessed-cards admin-chef">
            {% for chef in chefs %}
                <div class="revenue-card">
                    <div class="img-card">
                        <img src="{{chef.avatar_url}}" alt="imagem de {{chef.avatar_url}}">
                    </div>
                    <div class="info-card">
                        <h1>{{chef.name}}</h1>
                        <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                    </div>

                </div>
            {% endfor %}
        </section>
{% endblock %}