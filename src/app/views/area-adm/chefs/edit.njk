{% extends "../../layout.njk" %} 
{% block head %}
<link rel="stylesheet" href="/recipe.css">
{% endblock %}
{% block header%}
        <a href="/admin/recipes">Receitas</a>
        <a href="/admin/chefs">Chefs</a>
{% endblock %}
{% block content %}
    <div class="detail-admin"> 
        <div id="title-acessed">
            <h1>Editando chef</h1>
        </div>
        <div>
            <button 
                {% if chef.total_recipes != "0" %}
                    onclick="alertChef()"
                {% endif %}
                form="form-delete" type="submit">Deletar</button>
            <button form="form-put" type="submit">Salvar chef</button>
        </div>
    </div>
    <form id="form-put" action="/admin/chefs?_method=PUT" method="POST" enctype="multipart/form-data">
        <input 
            type="hidden"
            name="id"
            value = "{{chef.id}}">
        {%include 'area-adm/chefs/fields.njk'%}
    </form>
    <form id="form-delete" action="/admin/chefs?_method=DELETE" method="POST">
        <input 
            type="hidden"
            name="id"
            value = "{{chef.id}}">
    </form>
{% endblock %}