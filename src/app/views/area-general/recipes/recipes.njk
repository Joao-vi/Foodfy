{% extends "../../layout.njk" %} 
{% import "../../parts/header.njk" as header %}
{% block head %}
    <title>Receitas</title>
{% endblock%}
{% block header%}
{{ header.header( "logo.png", {  
 'items': [
  {
     'name': 'SOBRE',
     'path': '/about'
  },
  {
     'name': 'RECEITAS',
     'path': '/recipes'
  },
  {
     'name': 'CHEFS',
     'path': '/chefs'
  }
]
} , true, filter) }}

{% endblock %}

{% block content %}
    {% if filter %}
    <div id="title">
        <h1>Buscando por "{{filter}}"</h1>
    </div>
    {% endif%}
<div class="container-pagination">
        <section id="revenue" class="more-acessed-cards">
                {% for recipe in recipes %}
                    <div class="revenue-card grid" id="{{recipe.id}}">
                        <div class="img-card">
                            <img src="{{recipe.image}}" alt="imagem de {{recipe.image}}">
                        </div>
                        <div class="info-card">
                            <h1>{{recipe.title}}</h1>
                            <p>por {{recipe.chef_name}}</p>
                        </div>
                    </div>
                {% endfor %}
        </section>
    
     <div class="pagination"
        data-page= {{pagination.page}}
        data-total = {{pagination.total}}
        data-filter = {{filter}}
        >
   </div>
   </div>
    {% endblock%}